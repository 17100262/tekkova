<div class="container-fluid pt-5 pb-5" >
  <div class="row">
  	  <div class="loginmodal-container">
  			<div class="loginmodal-container-2">
  				<h1>Forgot your password?</h1>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",required: true, class: "form-control form-control-md", placeholder: "Enter Your Email" , id: "join_email" %>
    					
    					  <%= f.submit "Send password reset link", class: "login loginmodal-button loginmodal-submit" %>
      			<% end %>
  				
  			</div>
  		</div> 
  </div>
</div>
