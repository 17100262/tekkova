<link rel="stylesheet" href="/profile.css">
<section id="about-me" class="section section-no-border section-parallax custom-position-1 custom-xs-bg-size-cover parallax-no-overflow m-0 p-0">
    <div style="background:rgba(0,0,0,0.5); padding: 150px 0 20px 0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 custom-sm-margin-bottom-1">
                    <span id="icon-span" data-toggle="modal" data-target="#updateavatar"></span>
                    <img id="profileImage" src="<%= @user.profile_image.url %>" data-toggle="modal" data-target="#updateavatar" } class="img-fluid img-profile custom-border custom-image-position-2" alt />
                    <%= render "layouts/updateavatar", resource_name: current_user,resource: User %>
                </div>
                <div class="col-lg-6 col-xl-5">
                    <h1 class="text-white custom-font-size-1"><%= @user.name %></h1>
                    <p class="text-color-light font-weight-normal custom-font-size-2 custom-margin-bottom-1">
                        <%= @user.email %>
                    </p>
                    <p class="text-color-light font-weight-normal custom-font-size-2 custom-margin-bottom-1">Cars Posted:
                        <%= @user.cars.count %>
                    </p>
                    <p class="text-color-light font-weight-normal custom-font-size-2 custom-margin-bottom-1">Total Earnings: $12345 </p>
                    <p class="text-color-light font-weight-normal custom-font-size-2 m-0">Rating: 5 </p>

                </div>
            </div>
        </div>
    </div>
</section>

<div class="custom-about-me-links background-color-light">
    <div class="container-fluid">
        <div class="row">
            <a href="/my_cars" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="fas fa-car text-color-primary"></i>
						My Cars
					</span>
                </a>
            <a href="#" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="fas fa-calendar text-color-primary"></i>
						Booking History
					</span>
                </a>
            <a href="#" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="fas fa-file text-color-primary"></i>
						My Documents
					</span>
                </a>
            <a href="#" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="fas fa-envelope text-color-primary"></i>
						My Inbox
					</span>
                </a>
            <a href="#" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="far fa-calendar-check text-color-primary"></i>
						My Bookings
					</span>
                </a>
            <a href="#" class="text-decoration-none col-lg-2 col-md-4 col-6 text-center border p-0">
                
                    <span class="custom-nav-button text-color-dark">
						<i class="fas fa-money-bill text-color-primary"></i>
						My Payments
					</span>
                </a>
        </div>
    </div>
</div>

<section class="section-no-border background-color-light m-0">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="custom-box-details background-color-light col-lg-12 ml-5 float-right clearfix">
                    <h4>Personal Details</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="custom-list-style-1 p-0 mb-0">
                                <li>
                                    <span class="text-color-dark">Email:</span>
                                    <span class="custom-text-color-2"><a class="custom-text-color-2" href="mailto:<%= @user.email %>"><%= @user.email %></a></span>
                                </li>
                                <li>
                                    <span class="text-color-dark">Phone No.:</span>
                                    <span class="custom-text-color-2"><a class="custom-text-color-2" href="mailto:me@domain.com">  <%= @user.phone_number %> </a></span>
                                </li>
                                <li>
                                    <span class="text-color-dark">Birthday:</span>
                                    <span class="custom-text-color-2">23 October 1990</span>
                                </li>

                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="custom-list-style-1 p-0 mb-0">
                                <li>
                                    <span class="text-color-dark">Address:</span>
                                    <span class="custom-text-color-2">House Number , Street Name & Suburb</span>
                                </li>

                                <li>
                                    <span class="text-color-dark">State:</span>
                                    <span class="custom-text-color-2"><a class="custom-text-color-2" href="skype:yourskype?chat">State Name</a></span>
                                </li>
                                <li>
                                    <span class="text-color-dark">Postcode:</span>
                                    <span class="custom-text-color-2"><a class="custom-text-color-2" href="tel:123456789">12345</a></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-no-border background-color-light m-0">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="custom-box-details background-color-light col-lg-12 ml-5 float-right clearfix">
                    <h4>Driver's License Details</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="custom-list-style-1 p-0 mb-0">
                                <li class="my-4">
                                    <span class="text-color-dark">Country:</span>
                                    <span class="custom-text-color-2">America</span>
                                </li>
                                <li class="mb-4">
                                    <span class="text-color-dark">State:</span>
                                    <span class="custom-text-color-2">Newyork</span>
                                </li>
                                <li>
                                    <span class="text-color-dark">License Number:</span>
                                    <span class="custom-text-color-2">1234566</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6 my-4 my-md-0">
                                    <p class="lead text-color-dark">License Front Image</p>
                                    <img src="<%= (@user.licensefront.url if @user.licensefront.present?) || " /missing.jpg " %>" class="img-fluid">
