<%= render "layouts/profileheader",user: @user %>

<div class="container py-4 pb-2">
    <strong><p class="text-center">You will be able to upload documents required by Tekkova in this section</p></strong>
<div class="col-md-6 mx-auto">
	<div class="row align-items-center">
		<div class="col-sm-3">
			<input type="file" name="" id="documents" class="d-none">
			<label for="documents" class="file-document-design">+</label>
		</div>
		<div class="col-sm-5">
			<div class="progress">
			    <div class="progress-bar" id="bar">
			    	 
			    </div>
			</div>
		</div>
		<div class="col-sm-2">
			<div class="document-succes-bg">
				<div class="shw-tick">
					<i class="fas fa-check 2x"></i>
				</div>
			</div>
		</div>
		<div class="col-sm-2">
			<i class="fas fa-trash 2x text-danger" style="font-size: 30px"></i>
		</div>
	</div>
	
</div>

<script type="text/javascript">
	var i = 0;
	var progressBar = $("#bar");
	function countNumbers(){
	    if(i < 80){
	        i = i + 1;
	        progressBar.css("width", i + "%");
	    }
	    setTimeout("countNumbers()", 40);
	}
	$("#documents").on('change',function(){
		countNumbers();
	});
</script>
