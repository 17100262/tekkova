<!DOCTYPE html>
<html>
  <head>
    <title>Tekkova</title>
    <%= csrf_meta_tags %>

    <link href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
  
    
    <%= javascript_include_tag 'application' %>
    <meta name= viewport content= width=device-width initial-scale=1>

  </head>

  <body>
    
      <%= render 'layouts/header' %>
    
      <!--< if notice || alert %>-->
      <!--  <div class="alert alert-info" role="alert">-->
      <!--    <strong>Info!</strong> <= notice || alert %>-->
      <!--  </div>-->
      <!--<end %>-->
      <% unless params[:controller]=='home' && params[:action]=='admin' %>
      <div class="container-fluid p-0" style="min-height: 70vh;">
      <% end %>  
        <%= yield %>
    <% unless params[:controller]=='home' && params[:action]=='admin' %>
      </div>
    <% end %>
    <% if !(request.path == "/admin" or request.path == "/users" or request.path == "/car_management" or request.path == "/violations" or request.path == "/mass_email" )  %>
      <%= render 'layouts/footer' %>
    <% end %>
    
  </body>
</html>

<script>
  <% if controller_name  != "registrations"%>
    <% if notice %>
      toastr.success('<%=notice%>', {closeButton: true,closeHtml: '<button><i class="icon-on"></i></button>'});
    <% elsif alert %>
      toastr.error('<%=alert%>');
    <% end %>
  <% end %>
</script>