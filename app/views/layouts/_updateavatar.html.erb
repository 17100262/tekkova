<!-- Modal -->
<div id="updateavatar" class="modal fade log" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"> Please upload your Profile Picture</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
              <%= form_for(resource_name)  do |f| %>
                <!--<= f.select :avatar_id, options_for_select(Avatar.all.map{ |i| [ i.id, {'data-img-src'=>i.document.url(:small)}] }), {}, {:prompt => 'Select One',:id => 'image-picker'}  %>-->
                <%= f.file_field :profile_image,hide_label: true %>
                <%= f.submit "Submit",class:"btn btn-primary" %>
              <% end %>
        </div>
               
    </div> <!-- modal-content div-->
  </div>  <!-- modal-dialog div-->
</div>  <!-- modal div-->