<header id="header" class="header-narrow">
    <div class="header-body header-top header-top-colored header-top-dark">
        <div class="header-container container-fluid">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-logo">
                            <a href="/" style="text-decoration:none;">
                                <img alt="Tekkova" width="135" height="65" data-sticky-width="82" data-sticky-height="40" data-sticky-top="33" src="/logo-t.png">

                            </a>
                        </div>
                    </div>
                </div>
                <div class="header-column justify-content-end">
                    <div class="header-row">
                        <div class="header-nav">
                            <div class="header-nav-main header-nav-main-effect-1 header-nav-main-sub-effect-1">
                                <nav class="collapse">
                                <ul class="nav nav-pills" id="mainNav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/cars/new">List your Car <span class="sr-only">(current)</span></a>
                                </li>
                                <% if user_signed_in? %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/my_cars">My Cars <span class="sr-only">(current)</span></a>
                                </li>

                                    <% if current_user.admin %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="<%= admin_path %>">Admin Dashboard</a>
                                    </li>
                                    
                                    <% end %>

                                <% end %>
                                        <li class="dropdown">
                                            <a class="dropdown-item dropdown-toggle" href="#">Learn More</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/how_it_works">How it works</a></li>
                                                <li><a class="dropdown-item" href="/policies">Policies</a></li>
                                                <li><a class="dropdown-item" href="/contact_us">Contact</a></li>
                                            </ul>
                                        </li>

                                    <% if user_signed_in? %>
                                   
                                    
                                     <li class="dropdown p-image">
                                            
                                        <a class="dropdown-item dropdown-toggle header-user" href="#"><%= current_user.name %></a>
                                        <%= image_tag(current_user.profile_image.url, size: "50x50", class:"header_img dropdown-toggle") %>
                                        
                                    
                                            <ul class="dropdown-menu" style="right: 0;">
                                                <li><a class="dropdown-item" href="<%= edit_user_registration_path %>">Settings</a></li>
                                                <li><a class="dropdown-item" href="<%= user_path(current_user) %>">Profile</a></li>
                                                <li><a class="dropdown-item" href="<%= edit_user_registration_path %>">Edit Profile</a></li>
                                                <li><a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="delete">Log Out</a></li>
                                                
                                            </ul>
                                        </li>
                                    <% else %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="<%= new_user_registration_path %>">Sign Up</a>
                                    </li>
                                        <% end %>
                                        <!--<li class="nav-item">-->
                                        <!--  <a class="nav-link disabled" href="#">Disabled</a>-->
                                        <!--</li>-->
                                    </ul>
                                </nav>
                            </div>
                            <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>