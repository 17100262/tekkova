<div class="fixed-nav sticky-footer bg-dark" id="page-top">
  <!-- Navigation-->
  <%= render 'layouts/admin_sidebar' %>
  <div class="content-wrapper p-5">
    <div class="row">
      <div class="col-md-8">
        <h3>User Violation Management</h3>
      </div>
      <div class="col-md-4 text-right">
        <%= link_to 'Add New Violation', new_violation_path, class:"btn btn-sm btn-primary" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-data">
        <thead>
          <tr>
            <th>User Name</th>
            <th>Violation Detail</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @violations.each do |vio| %>
            <tr>
              <td><%= vio.user.name %></td>
              <td> <%= vio.reason %></td>
              <td><%= link_to '<i class="fas fa-trash icon-chat" style="font-size: 19px" title="Delete"></i>'.html_safe, vio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>