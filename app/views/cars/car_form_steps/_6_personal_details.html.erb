<div class="container">
<div class="row mt-2">
<div class="col-md-12 btn-group btn-breadcrumb">
    <a href="<%= car_steps_path(step: 1,id: @car.id) %>" class="btn btn-primary car_details">Car Details</a>
    <a href="<%= car_steps_path(step: 2,id: @car.id) %>" class="btn btn-primary car_pictures">Car Pictures</a>
    <a href="<%= car_steps_path(step: 3,id: @car.id) %>" class="btn btn-primary car_availibility">Availibility and Pickup</a>
    <a href="<%= car_steps_path(step: 4,id: @car.id) %>" class="btn btn-primary car_preference">Car Preference</a>
    <a href="<%= car_steps_path(step: 5,id: @car.id) %>" class="btn btn-primary car_liecense">Driver Liecense</a>
    <a href="<%= car_steps_path(step: 6,id: @car.id) %>" class="btn btn-primary car_personal">Personal Details</a>
</div>
</div>
<div id="multi-form" class="car-personal">
<%= form_for(@car) do |form| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="wizard">
    
    
    <h2>Personal Details</h2>
    <section>
      <h5>Address</h5>
      <div class="row">
        <div class="col-md-6">
          <%= form.label "House / Unit / Street Number" %> 
          <%= form.number_field :personal_house_number, id:"required"  %>
        </div>
        <div class="col-md-6">
          <%= form.label "Steet Name & Type" %> 
          <%= form.text_field :personal_street_name, id:"required"  %>
        </div>
      </div>  
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <%= form.label "Suburb" %> 
          <%= form.text_field :personal_suburb, id:"required"  %>
        </div>
        <div class="col-lg-4 col-md-6">
          <%= form.label "State" %> 
          <%= form.text_field :personal_state, id:"required"  %>
        </div>
        <div class="col-lg-4 col-md-6">
          <%= form.label "Postcode" %> 
          <%= form.text_field :personal_postcode, id:"required"  %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= form.label "Date of Birth" %> 
          <%= form.date_field :personal_dob, id:"required"  %>
        </div>
        <div class="col-md-6">
          <%= form.label "Mobile Number" %> 
          <%= form.text_field :personal_mobile, id:"required"  %>
      </div>  
      </div>
    </section>
  <%= form.hidden_field :step, value: 6 %>
  <%= form.hidden_field :status, value: "completed" %>
  </div>
  <div class="mt-2">
  <%= link_to "Back to Previous Step", car_steps_path(id: @car.id,step: 5) ,class: "btn btn-primary btn-sm",role: "button" %>
  
  <span class="float-right">
  <%= form.submit "Submit", class:"btn btn-primary btn-sm" %>
  </span>
  </div>
<% end %>
</div>
</div>