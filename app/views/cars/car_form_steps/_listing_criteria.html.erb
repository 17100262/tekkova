
  			<h3 class="mt-3">Listing Criteria</h3>
          <%= form_for(@car) do |f| %>
            <% if @car.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>
          
                <ul>
                <% @car.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            
              <p>Please ensure that your vehicle meets the following criteria</p>
              <%= f.check_box :model_year_check, required: true %>
              <span>2013-2019 model year</span> <br>
              
              <%= f.check_box :usage_limit_check, required: true %>
              <span>Less than 200,000 in kms</span> <br>
              
              <%= f.check_box :register_check, required: true %>
              <span>Registered</span> <br>
              
              <%= f.check_box :road_worthy_check, required: true %>
              <span>Road Worthy</span> <br>
              
              <%= f.check_box :write_off_check, required: true %>
              <span>No write off</span> <br>
              
              
              <%= f.check_box :maintained_check, required: true %>
              <span>Well maintained and serviced as scheduled and recommended by the manafacturer </span><br><br>
              <%= f.hidden_field :step, value: 0 %>
              <%= f.hidden_field :status, value: "draft" %>
              <div class="row">
                <div class="col-12">
                  <%= link_to 'Back', cars_path, class:"btn btn-primary btn-sm" %>
                  <%= f.submit "Submit", class:"btn btn-primary btn-sm float-right"%>
                </div>
                
              </div>
          <% end %> 
          