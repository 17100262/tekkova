<div class="container">
  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg w-75">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Modal Heading</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <%= form_for(@car,remote: true) do |form| %>
      <%= form.hidden_field :step,value: 4 %>
      <%= form.text_area :description, rows:"5", class:'form-control', placeholder:"Please provide a description as it will appear on your car advertised profile to renters to see before booking, these may include vehicle modifications or any particular notes that you may have regrading your vehicle"  %>
      
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <%= form.submit "Save", class:'refresh-page btn btn-primary'%>
          <%end %>
          <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
        </div>
       
      </div>
    </div>
  </div>
  
