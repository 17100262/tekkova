<div class="container mt-4">
  <div class="row">
    <div class="col-md-11">
      <div id="car_carousal_slider<%= @car.id %>" class="carousel slide article-slide" data-ride="carousel">
        <div class="row">
          <div class="col-10 pr-1">
              <div class="carousel-inner">
                <% @car.car_pictures.each_with_index  do |image, index| %>
                  <div class="carousel-item <%= "active" if index == 0 %>">
                    <%= image_tag(image.avatar.url, class:'car_slider_pic') %>
                  </div>
                <% end %>
                <div class="image-quantity">hhhhh</div>
              </div>
              <a class="carousel-control-prev" href="#car_carousal_slider<%= @car.id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#car_carousal_slider<%= @car.id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
          </div>
        <div class="col-2 pl-0">
          <ol class="carousel-indicators indicator-fix-height">
            <% @car.car_pictures.each_with_index  do |image, index| %>
              <li data-target="#car_carousal_slider<%= @car.id %>" data-slide-to="<%= index %>" <%= "active" if index == 0 %>>
                <%= image_tag(image.avatar.url) %>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
   </div>
  </div>
