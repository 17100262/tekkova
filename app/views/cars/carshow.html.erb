<div class="container mt-4">
  <div class="row">
    <div class="col-md-10">
      <div id="car_carousal_slider<%= @car.id %>" class="carousel slide article-slide" data-ride="carousel" data-interval="30px00">
        <div class="row">
          <div class="col-10 pr-1">
            <div class="carousel-inner">
              <% @car.car_pictures.order("position ASC").each_with_index  do |image, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= image_tag(image.avatar.url, class:'car_slider_pic') %>
                </div>
              <% end %>
              <div class="image-quantity"></div>
            </div>
            <a class="carousel-control-prev" href="#car_carousal_slider<%= @car.id %>" role="button" data-slide="prev">
              <i class="fas fa-chevron-left slider-icon"></i>
              <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#car_carousal_slider<%= @car.id %>" role="button" data-slide="next">
              <i class="fas fa-chevron-right slider-icon"></i>
              <!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
              <span class="sr-only">Next</span>
            </a>
          </div>
          <div class="col-2 pl-0">
            <div class="top-arrow"></div>
            <ol class="carousel-indicators indicator-fix-height">
              <% @car.car_pictures.order("created_at ASC").each_with_index  do |image, index| %>
                  <li data-target="#car_carousal_slider<%= @car.id %>" 
                    style="background:url('<%= image.avatar.url %>') center center" data-slide-to="<%= index %>" <%= "active" if index == 0 %>
                  </li>
              <% end %>
            </ol>
            <div class="down-arrow"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <button class="btn btn-primary mb-2 px-3 mt-2">Send <br>Booking Request</button>
      <button class="btn btn-primary px-5 mt-2 mb-2">Contact <br>Owner</button>
    </div>
  </div>
</div>
<div class="container py-2">
  <div class="car-detail-highlighted">
    <p class="mb-0"><strong>
      <%= @car.year %>
      <%= @car.make %>
      <%= @car.model %>
      <%= @car.series %>
      <%= @car.trans_mission %>
    </strong> </p>
  </div>
</div>
<hr>
