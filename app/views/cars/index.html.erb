

<div class="container py-4">
    <h3>Listed Cars</h3>
    <table class="table table-bordered">
        <thead>
          <tr>
            <th>Year</th>
            <th>Make</th>
            <th>Model</th>
            <th>Status</th>
            <th colspan=3>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cars.each do |car| %>    
          <tr>
            <td><%= car.year %></td>
            <td> <%= car.make %></td>
            <td> <%= car.model %></td>
            <td><%= car.status.humanize %></td>
            
          <td><%= link_to '<i class="fa fa-folder-open icon-chat" style="font-size: 19px" title="Show"></i>'.html_safe, car_path(car), class:"" %></td>
          <td><%= link_to '<i class="fas fa-edit icon-chat" style="font-size: 19px" title="Edit"></i>'.html_safe, edit_car_path(car), class:"" %></td>
          <td><%= link_to '<i class="fas fa-trash icon-chat" style="font-size: 19px" title="Delete"></i>'.html_safe, car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
          </tr>
          <% end %>
          
        </tbody>
      </table>
<%= link_to 'Add New Car', new_car_path, class:"btn btn-sm btn-primary" %>
</div>

