<div class="container py-4">
<div class="row mt-2">
<div class="col-md-12 btn-group btn-breadcrumb">
    <a href="#" class="btn btn-primary no-link car_details">Car Details</a>
    <a href="#" class="btn btn-primary no-link car_pictures">Car Pictures</a>
    <a href="#" class="btn btn-primary no-link car_preference">Car Preference</a>
    <a href="#" class="btn btn-primary no-link car_preference">Personal Details</a>
    <a href="#" class="btn btn-default car_preference">Driver License</a>
    <a href="#" class="btn btn-default car_preference">Availibility & Pickup</a>
</div>
</div>
</div>
<h2 class="heading mt-4">Personal Details</h2>
<div class="p-details background-img">
  
</div>
<div class="container py-4">
<div id="multi-form" class="car-personal">
<%= form_for(@user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="wizard">
    <section>
      <h5>Address</h5>
      <div class="row">
        <div class="col-md-6">
          <%= form.label "House / Unit / Street Number" %> 
          <%= form.number_field :personal_house_number  %>
        </div>
        <div class="col-md-6">
          <%= form.label "Steet Name & Type" %> 
          <%= form.text_field :personal_street_name  %>
        </div>
      </div>  
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <%= form.label "Suburb" %> 
          <%= form.text_field :personal_suburb  %>
        </div>
        <div class="col-lg-4 col-md-6">
          <%= form.label "State" %> 
          <%= form.text_field :personal_state  %>
        </div>
        <div class="col-lg-4 col-md-6">
          <%= form.label "Postcode" %> 
          <%= form.text_field :personal_postcode  %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= form.label "Date of Birth" %> 
          <%= form.text_field :personal_dob,  class:"datepicker"  %>
        </div>
        <div class="col-md-6">
          <%= form.label "Mobile Number" %> 
          <%= form.text_field :personal_mobile  %>
      </div>  
      </div>
    </section>
  <%= form.hidden_field :step, value: 1 %>
  </div>

  
  <div class="float-right my-2">
  <%= form.submit "Next", class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>
</div>